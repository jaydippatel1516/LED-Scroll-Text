<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:dither="true" android:visible="true" android:shape="rectangle" android:useLevel="false">
            <gradient android:startColor="@color/colortxt" android:endColor="@color/colortxt" android:angle="270" />
            <corners android:radius="@dimen/_20sdp" />
            <size android:height="@dimen/_10sdp" android:width="@dimen/_100sdp" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:dither="true" android:visible="true" android:shape="rectangle" android:useLevel="false">
            <gradient android:startColor="#4E4E4E" android:endColor="#4E4E4E" android:angle="270" />
            <corners android:radius="@dimen/_20sdp" />
            <size android:height="@dimen/_10sdp" android:width="@dimen/_100sdp" />
        </shape>
    </item>
</selector>
