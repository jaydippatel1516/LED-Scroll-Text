<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:dither="true" android:visible="true" android:shape="oval" android:useLevel="false">
            <gradient android:startColor="@color/white" android:endColor="@color/white" android:angle="270" />
            <size android:height="@dimen/_20sdp" android:width="@dimen/_20sdp" />
            <stroke android:width="@dimen/_6sdp" android:color="#0000ffff" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:dither="true" android:visible="true" android:shape="oval" android:useLevel="false">
            <gradient android:startColor="#666666" android:endColor="#666666" android:angle="270" />
            <size android:height="@dimen/_20sdp" android:width="@dimen/_20sdp" />
            <stroke android:width="@dimen/_6sdp" android:color="#0000ffff" />
        </shape>
    </item>
</selector>
