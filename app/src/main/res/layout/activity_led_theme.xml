<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/allbg" />

    <RelativeLayout
        android:id="@+id/toolbar_language"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:src="@drawable/back" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toRightOf="@+id/ivBack"
            android:fontFamily="@font/productsansregular"
            android:gravity="center_vertical"
            android:text="@string/themes_"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/white" />


    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_language"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/productsansregular"
                android:gravity="center_vertical"
                android:text="@string/birthday_banner"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/txtlight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/birthday1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/thumb_img_birthday_02"
                    app:riv_corner_radius="@dimen/_10sdp" />

                <RelativeLayout
                    android:id="@+id/birthdaysell"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/thumb_img_birthday_03"
                        app:riv_corner_radius="@dimen/_10sdp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/lightbg"
                        android:fontFamily="@font/productsansregular"
                        android:gravity="center"
                        android:text="@string/see_all"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/white" />


                </RelativeLayout>


            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/productsansregular"
                android:gravity="center_vertical"
                android:text="@string/christmas_banner"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/txtlight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/christmas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/thumb_img_christmas_01"
                    app:riv_corner_radius="@dimen/_10sdp" />

                <RelativeLayout
                    android:id="@+id/christmaseeall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/thumb_img_christmas_02"
                        app:riv_corner_radius="@dimen/_10sdp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/lightbg"
                        android:fontFamily="@font/productsansregular"
                        android:gravity="center"
                        android:text="@string/see_all"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/white" />


                </RelativeLayout>


            </LinearLayout>
            <RelativeLayout
                android:id="@+id/card123"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/white"

                android:focusableInTouchMode="true">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/fram_fbnative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <com.google.android.ads.nativetemplates.TemplateView
                    android:id="@+id/my_template"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:gnt_template_type="@layout/custom_native_small_new" />

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_view_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/cta"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@drawable/bg_ads1"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:textColor="@color/black" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/background"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/_5sdp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/gnt_default_margin"
                                android:layout_marginEnd="@dimen/gnt_default_margin"
                                android:layout_marginBottom="@dimen/gnt_default_margin"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:id="@+id/relStart"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/icon"
                                        android:layout_width="@dimen/_35sdp"
                                        android:layout_height="@dimen/_35sdp"
                                        android:src="@color/gnt_gray" />

                                    <TextView
                                        android:layout_width="22dp"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/icon"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:gravity="center"
                                        android:lines="1"
                                        android:text="AD"
                                        android:textColor="@color/gnt_gray"
                                        android:textSize="@dimen/_8ssp" />

                                </RelativeLayout>

                                <LinearLayout
                                    android:id="@+id/content"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/gnt_default_margin"
                                    android:layout_toEndOf="@+id/relStart"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/headline"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_4sdp"
                                            android:background="#8A8888"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/primary"
                                                android:layout_width="wrap_content"
                                                android:layout_height="20dp"
                                                android:layout_marginStart="@dimen/_5sdp"
                                                android:lines="1"
                                                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                                android:textColor="@color/black" />

                                        </LinearLayout>

                                        <TextView
                                            android:id="@+id/body"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_5sdp"
                                            android:layout_marginTop="@dimen/_2sdp"
                                            android:layout_marginEnd="@dimen/gnt_no_margin"

                                            android:layout_marginBottom="3dp"
                                            android:background="#8A8888"
                                            android:maxLines="2"
                                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                            android:textColor="@color/gnt_gray" />

                                        <androidx.appcompat.widget.LinearLayoutCompat
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_5sdp"
                                            android:orientation="horizontal"
                                            android:visibility="gone">

                                            <TextView
                                                android:id="@+id/rtvRating"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/_5sdp"
                                                android:layout_marginTop="@dimen/_2sdp"
                                                android:layout_marginEnd="@dimen/gnt_no_margin"
                                                android:layout_marginBottom="3dp"
                                                android:maxLines="1"
                                                android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                                                android:textColor="@color/gnt_gray" />

                                            <RatingBar
                                                android:id="@+id/rating_bar"
                                                style="@style/gnt_RatingBar"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="@dimen/_3sdp"
                                                android:layout_marginTop="@dimen/_1sdp"
                                                android:isIndicator="true"
                                                android:lines="1"
                                                android:numStars="5"
                                                android:progressTint="@color/black"
                                                android:stepSize="0.1" />

                                            <TextView
                                                android:id="@+id/secondary"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_marginStart="@dimen/_5sdp"
                                                android:layout_marginTop="@dimen/gnt_no_margin"
                                                android:layout_marginEnd="@dimen/gnt_no_margin"
                                                android:layout_marginBottom="@dimen/gnt_no_margin"
                                                android:gravity="center"
                                                android:lines="1"
                                                android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                                                android:textColor="@color/gnt_gray" />

                                        </androidx.appcompat.widget.LinearLayoutCompat>

                                    </LinearLayout>

                                </LinearLayout>

                            </RelativeLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.appcompat.widget.LinearLayoutCompat>

                </com.facebook.shimmer.ShimmerFrameLayout>

            </RelativeLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/productsansregular"
                android:gravity="center_vertical"
                android:text="@string/happy_new_year"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/txtlight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/hny"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/thumb_img_new_year_01"
                    app:riv_corner_radius="@dimen/_10sdp" />

                <RelativeLayout
                    android:id="@+id/hnyseeall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/thumb_img_new_year_02"
                        app:riv_corner_radius="@dimen/_10sdp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/lightbg"
                        android:fontFamily="@font/productsansregular"
                        android:gravity="center"
                        android:text="@string/see_all"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/white" />


                </RelativeLayout>


            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/productsansregular"
                android:gravity="center_vertical"
                android:text="@string/love"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/txtlight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/love"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/thumb_img_love_02"
                    app:riv_corner_radius="@dimen/_10sdp" />

                <RelativeLayout
                    android:id="@+id/loveseeall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/thumb_img_love_03"
                        app:riv_corner_radius="@dimen/_10sdp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/lightbg"
                        android:fontFamily="@font/productsansregular"
                        android:gravity="center"
                        android:text="@string/see_all"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/white" />


                </RelativeLayout>


            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/productsansregular"
                android:gravity="center_vertical"
                android:text="@string/happy_anniversary"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/txtlight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/happynver"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/thumb_img_happy_anniversary_01"
                    app:riv_corner_radius="@dimen/_10sdp" />

                <RelativeLayout
                    android:id="@+id/happynverseeall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/thumb_img_happy_anniversary_02"
                        app:riv_corner_radius="@dimen/_10sdp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/lightbg"
                        android:fontFamily="@font/productsansregular"
                        android:gravity="center"
                        android:text="@string/see_all"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/white" />


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</RelativeLayout>